<h1 class="page-header"><%= @admin.model_name.human(count: 2) %></h1>

<% if @admin.errors.any? %>
	
	<div class="alert alert-danger alert-dismissable">
  	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
  	<ul>
  		<% @admin.errors.full_messages.each do |mensagem|%>
  			<li>
    			<%= mensagem %>
    		</li>
  		<% end %>
  	</ul>
	</div>
	
<% end %>  
<div class="panel panel-default">
  <div class="panel-heading">
    <%= action_message %>
  </div>		        
	<!-- /.panel-heading -->

<div class="panel-body">
 <div class="col-lg-6">
  <%= form_for ([:backoffice, @admin]), html:{class:"form-group"} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class:"form-control", placeholder:"Ex: Juca da Silva" %>
 	<%= f.label :email %>
 	<%= f.text_field :email, class:"form-control", placeholder:"Ex: juca@gmail.com" %>
  <%= f.label :password %>
  <%= f.password_field :password, class:"form-control", placeholder:"Ex: 123456" %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Ex: 123456" %>
 	<button type="submit" class="btn btn-default">Salvar</button>
 <% end %>
</div> <!-- /.col-lg-6 -->
</div> <!-- /.panel-body -->