
<h1 class="page-header">Administradores</h1>
<div class="panel panel-default">
  <div class="panel-heading">
    Administradores
    <%= link_to new_backoffice_admin_path, class:"btn btn-success btn-circle pull-right" do %>
      <i class="fa fa-plus"></i>
    <% end %>
  </div>		        
	<!-- /.panel-heading -->

  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Nome</th>
            <th>E-mail</th>
            <th>Role</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        	<% @admins.each do |admin|  %>
            <tr>
              <td><%= admin.id %></td>
              <td><%= admin.name %></td>
              <td><%= admin.email %></td>
              <td><%= admin.role_br %></td>
              <td>
              	<%= link_to edit_backoffice_admin_path(admin), class:"btn btn-primary btn-circle" do %>
              		<i class="fa fa-edit"></i>
                <% end %>
                <% if admin.id != current_admin.id %>
                  <%= link_to backoffice_admin_path(admin), method: "delete", class:"btn btn-danger btn-circle", data: {confirm: "Tem certeza que deseja excluir <b>#{admin.email}?</b>"} do %>
                    <i class="fa fa-minus"></i>
                  <% end %>
                <% else %>
                  <%= link_to "#", class:"btn btn-danger btn-circle", disabled: "disabled" do %>
                    <i class="fa fa-minus"></i>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>
<!-- /.panel-panel-default -->
