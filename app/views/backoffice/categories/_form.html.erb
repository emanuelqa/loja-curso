<h1 class="page-header">Categoria</h1>

<% if @category.errors.any? %>
	
	<div class="alert alert-danger alert-dismissable">
  	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
  	<ul>
  		<% @category.errors.full_messages.each do |mensagem|%>
  			<li>
    			<%= mensagem %>
    		</li>
  		<% end %>
  	</ul>
	</div>
	
<% end %>  
<div class="panel panel-default">
  <div class="panel-heading">
    <%= action %>
  </div>		        
	<!-- /.panel-heading -->

<div class="panel-body">
 <div class="col-lg-6">
   <%= form_for ([:backoffice, @category]), html:{class:"form-group"} do |f| %>
   	<%= f.label :descrição %>
   	<%= f.text_field :description, class:"form-control", placeholder:"Ex: Animais/Pet" %>
   	<button type="submit" class="btn btn-default">Salvar</button>
   <% end %>
</div> <!-- /.col-lg-6 -->
</div> <!-- /.panel-body -->